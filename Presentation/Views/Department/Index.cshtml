@model DepartmentsViewModel
@{
    ViewData["Title"] = "Departments";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-5 mt-2">
    <div>
        <h5 class="text-muted small text-uppercase ls-wide fw-bold mb-1">Organization</h5>
        <h2 class="fw-bold mb-0">Department List</h2>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-premium btn-premium-primary">
            <i class="bi bi-plus-square-fill"></i> Add Department
        </a>
    }
</div>

<div class="card-premium overflow-hidden">
    <div class="card-body p-0">
        @if (!Model.Departments.Any())
        {
            <div class="text-center py-5 opacity-50">
                <i class="bi bi-building-fill display-2 mb-3"></i>
                <p class="fs-5 fw-bold mb-0">No Departments Found</p>
                <p class="small mb-4">There are no departments in the system yet.</p>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-premium btn-premium-primary">Add First Department</a>
                }
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table-modern mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Department Name</th>
                            <th>Employees</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Departments)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="bg-primary bg-opacity-10 p-2 rounded text-primary">
                                            <i class="bi bi-diagram-3-fill"></i>
                                        </div>
                                        <div class="fw-bold text-dark fs-6">@item.Name</div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-primary-light fw-bold border-0 px-3 py-2">
                                        @item.EmployeeCount Employees
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border-0 p-2 text-info" title="View">
                                            <i class="bi bi-eye-fill fs-5"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light border-0 p-2 text-primary" title="Edit">
                                                <i class="bi bi-pencil-square fs-5"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this department?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-light border-0 p-2 text-danger" title="Delete">
                                                    <i class="bi bi-trash3-fill fs-5"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>