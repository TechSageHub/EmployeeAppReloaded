@model DepartmentsViewModel
@{
    ViewData["Title"] = "Departments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-primary mb-0">@ViewData["Title"]</h2>
        <p class="text-muted">Manage your organizational structure</p>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center">
            <i class="bi bi-plus-circle me-2"></i> New Department
        </a>
    }
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        @if (!Model.Departments.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-building text-muted" style="font-size: 3rem;"></i>
                <p class="mt-3 fs-5">No departments found.</p>
                <a asp-action="Create" class="btn btn-outline-primary mt-2">Create First Department</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Department Name</th>
                            <th>Staff Count</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Departments)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.Name</div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-primary border">@item.EmployeeCount Staff</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm rounded">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-white btn-sm @(User.IsInRole("Admin") ? "border-end" : "")" title="View Details"><i class="bi bi-eye text-info"></i></a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-white btn-sm border-end" title="Edit"><i class="bi bi-pencil text-primary"></i></a>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Delete department? Associated employees may be affected.');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-white btn-sm" title="Delete"><i class="bi bi-trash text-danger"></i></button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>