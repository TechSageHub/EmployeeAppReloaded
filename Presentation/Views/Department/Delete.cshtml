@model Presentation.Models.DepartmentViewModel

@{
    ViewData["Title"] = "Confirm Deletion";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header bg-danger text-white p-4">
                <h4 class="mb-0 fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Deletion</h4>
                <p class="mb-0 small opacity-75">All associated data may be affected</p>
            </div>
            <div class="card-body p-4 text-center">
                <div class="mb-4">
                    <i class="bi bi-building-x text-danger display-1 opacity-25"></i>
                </div>
                <h5 class="fw-bold mb-1">@Model.Name</h5>
                <p class="text-muted mb-4">Are you sure you want to permanently delete this department?</p>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="bg-light rounded p-3 mb-4 text-start">
                        <div class="small text-muted mb-1 text-uppercase fw-bold" style="font-size: 0.65rem;">Description</div>
                        <div class="fw-medium">@Model.Description</div>
                    </div>
                }

                <form asp-action="DeleteConfirmed" asp-controller="Department" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger py-2 rounded-pill">
                            <i class="bi bi-trash me-2"></i>Delete Permanently
                        </button>
                        <a asp-action="Index" class="btn btn-light py-2 rounded-pill">Cancel and Keep</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
