@model Presentation.Models.CreateEmployeeViewModel

@{
    ViewData["Title"] = "Add New Employee";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white p-4">
                <h4 class="mb-0 fw-bold">@ViewData["Title"]</h4>
                <p class="mb-0 small opacity-75">Enter details to register a new staff member</p>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-medium"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="e.g. John" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-medium"></label>
                            <input asp-for="LastName" class="form-control" placeholder="e.g. Doe" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label asp-for="Email" class="form-label fw-medium"></label>
                            <input asp-for="Email" class="form-control" placeholder="john.doe@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="HireDate" class="form-label fw-medium"></label>
                            <input asp-for="HireDate" class="form-control" type="date" />
                            <span asp-validation-for="HireDate" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Salary" class="form-label fw-medium"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Salary" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Salary" class="text-danger small"></span>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label asp-for="DepartmentId" class="form-label fw-medium">Department</label>
                            <select asp-for="DepartmentId" class="form-select" asp-items="Model.Departments">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-12 mb-4">
                            <label asp-for="Photo" class="form-label fw-medium">Profile Picture</label>
                            <input asp-for="Photo" type="file" class="form-control" />
                            <div class="form-text">Optional: JPG, PNG or GIF (Max 2MB)</div>
                            <span asp-validation-for="Photo" class="text-danger small"></span>
                        </div>

                        <div class="col-md-12">
                            <hr class="my-4">
                            <h5 class="fw-bold mb-3 text-secondary"><i class="bi bi-geo-alt me-2"></i>Address Details (Optional)</h5>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label asp-for="Street" class="form-label fw-medium"></label>
                            <input asp-for="Street" class="form-control" placeholder="123 Staff Hub St." />
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="City" class="form-label fw-medium"></label>
                            <input asp-for="City" class="form-control" placeholder="City" />
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="State" class="form-label fw-medium"></label>
                            <select asp-for="State" class="form-select" asp-items="Model.States">
                                <option value="">-- Select State --</option>
                            </select>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Country" class="form-label fw-medium"></label>
                            <input asp-for="Country" class="form-control" />
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-2 mt-2">
                        <button type="submit" class="btn btn-primary px-4 rounded-pill">
                            <i class="bi bi-check-circle me-2"></i>Create Employee
                        </button>
                        <a asp-action="Index" class="btn btn-light px-4 rounded-pill">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
