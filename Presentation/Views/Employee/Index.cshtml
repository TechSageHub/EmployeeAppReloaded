@model Presentation.Models.EmployeesViewModel

@{
    ViewData["Title"] = "Employee Directory";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-primary mb-0">@ViewData["Title"]</h2>
        <p class="text-muted">Manage your organization's talent</p>
    </div>
    <div class="d-flex align-items-center gap-2">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="BulkUpload" class="btn btn-outline-primary d-flex align-items-center rounded-pill px-3">
                <i class="bi bi-cloud-upload me-2"></i> Bulk Upload
            </a>
            <a asp-action="Create" class="btn btn-primary d-flex align-items-center rounded-pill px-3">
                <i class="bi bi-person-plus-fill me-2"></i> Add Employee
            </a>
        }
    </div>
</div>

<div class="card border-0 shadow-sm pt-2">
    <div class="card-body p-0">
        @if (Model?.Employees == null || !Model.Employees.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                <p class="mt-3 fs-5">No employees found. Start by adding one!</p>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-outline-primary mt-2">Add First Employee</a>
                }
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Employee</th>
                            <th>Email Address</th>
                            <th>Salary</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(employee.ImageUrl))
                                        {
                                            <img src="@employee.ImageUrl" class="employee-img-sm rounded-circle" alt="" />
                                        }
                                        else
                                        {
                                            <div class="employee-img-sm rounded-circle bg-light d-flex align-items-center justify-content-center text-primary fw-bold">
                                                @employee.FirstName[0]@employee.LastName[0]
                                            </div>
                                        }
                                        <div class="ms-3">
                                            <div class="fw-bold text-dark">@employee.FirstName @employee.LastName</div>
                                            <div class="small text-muted">@employee.DepartmentName</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-dark">@employee.Email</span>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark fw-normal border">@(employee.Salary != null ? employee.Salary.ToString("C") : "N/A")</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm rounded">
                                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-white btn-sm border-end" title="View Details"><i class="bi bi-eye text-info"></i></a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-white btn-sm border-end" title="Edit"><i class="bi bi-pencil text-primary"></i></a>
                                            <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-white btn-sm" title="Delete"><i class="bi bi-trash text-danger"></i></a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
