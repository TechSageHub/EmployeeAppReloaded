@model Presentation.Models.EmployeesViewModel

@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-5 mt-2">
    <div>
        <h5 class="text-muted small text-uppercase ls-wide fw-bold mb-1">Staff</h5>
        <h2 class="fw-bold mb-0">Employee List</h2>
    </div>
    <div class="d-flex align-items-center gap-3">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="BulkUpload" class="btn btn-premium btn-light border shadow-sm">
                <i class="bi bi-cloud-upload"></i> Bulk Import
            </a>
            <a asp-action="Create" class="btn btn-premium btn-premium-primary">
                <i class="bi bi-person-plus-fill"></i> Add Employee
            </a>
        }
    </div>
</div>

<div class="card-premium overflow-hidden">
    <div class="card-body p-0">
        @if (Model?.Employees == null || !Model.Employees.Any())
        {
            <div class="text-center py-5 opacity-50">
                <i class="bi bi-people-fill display-2 mb-3"></i>
                <p class="fs-5 fw-bold mb-0">No records found</p>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-premium btn-premium-primary mt-3">Add First Employee</a>
                }
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table-modern mb-0">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Contact</th>
                            <th>Salary</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        @if (!string.IsNullOrEmpty(employee.ImageUrl))
                                        {
                                            <img src="@employee.ImageUrl" class="rounded-circle shadow-sm" style="width: 48px; height: 48px; object-fit: cover;" alt="" />
                                        }
                                        else
                                        {
                                            <div class="avatar-sm bg-primary-light bg-opacity-10 text-primary-light rounded-circle d-flex align-items-center justify-content-center fw-bold shadow-sm" style="width: 48px; height: 48px;">
                                                @employee.FirstName[0]@employee.LastName[0]
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold text-dark">@employee.FirstName @employee.LastName</div>
                                            <div class="text-muted small opacity-75">@employee.DepartmentName</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-medium text-dark">@employee.Email</span>
                                        <span class="small text-muted opacity-50">Email</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark fw-bold border-0 px-3 py-2">
                                        @(employee.Salary != null ? employee.Salary.ToString("C") : "Unspecified")
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-sm btn-light border-0 p-2 text-info" title="View">
                                            <i class="bi bi-eye-fill fs-5"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-light border-0 p-2 text-primary" title="Edit">
                                                <i class="bi bi-pencil-square fs-5"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-light border-0 p-2 text-danger" title="Delete">
                                                <i class="bi bi-trash3-fill fs-5"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
