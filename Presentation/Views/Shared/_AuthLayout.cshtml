<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StaffHub</title>
    <link rel="icon" type="image/png" href="~/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --auth-bg-gradient: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            --primary-accent: #2563eb;
            --secondary-accent: #4f46e5;
        }

        body.auth-body {
            font-family: 'Outfit', sans-serif;
            background: var(--auth-bg-gradient);
            min-height: 100vh;
            overflow-x: hidden;
            color: #1e293b;
        }

        .auth-navbar {
            padding: 1.25rem 0;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .auth-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #0f172a;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .auth-brand span {
            color: #0f172a;
        }
    </style>
</head>
<body class="auth-body">


    <nav class="auth-navbar">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="auth-brand" href="/">
                <i class="bi bi-stack text-primary"></i>
                <span>StaffHub</span>
            </a>
            <div class="auth-nav-links">
                @if (!User.Identity!.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light rounded-pill px-4 me-2">Sign In</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary rounded-pill px-4 shadow-sm border-0" style="background: linear-gradient(90deg, #3b82f6, #6366f1);">Get Started</a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill px-4">Dashboard</a>
                }
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="py-5 mt-5">
        <div class="container text-center">
            <div class="text-muted small">
                &copy; 2026 - StaffHub workforce solution.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
