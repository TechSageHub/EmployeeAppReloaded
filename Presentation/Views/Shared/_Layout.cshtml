<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StaffHubSystem</title>
    <link rel="icon" type="image/png" href="~/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/slideshow.css" />
</head>
<body>
    <div class="app-shell">
        <div class="sidebar-overlay" id="sidebarOverlay"></div>
        <aside class="sidebar" id="mainSidebar">
            <div class="sidebar-header">
                <div class="sidebar-brand-wrapper">
                    @if (User.Identity!.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <h1 class="sidebar-brand-title">Admin Panel</h1>
                        <span class="sidebar-brand-subtitle">Welcome</span>
                    }
                    else
                    {
                        <h1 class="sidebar-brand-title">StaffHub</h1>
                        <span class="sidebar-brand-subtitle">Workforce Management</span>
                    }
                </div>
                <button class="btn btn-close-sidebar d-lg-none" type="button" id="closeSidebar">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <div class="sidebar-nav-container" id="sidebarNav">
                <ul class="nav flex-column">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-speedometer2 me-2"></i>Dashboard
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Employee" ? "active" : "")" asp-controller="Employee" asp-action="Index">
                                    <i class="bi bi-people me-2"></i>Employees
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Department" ? "active" : "")" asp-controller="Department" asp-action="Index">
                                    <i class="bi bi-diagram-3 me-2"></i>Departments
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "MyProfile" ? "active" : "")" asp-controller="Employee" asp-action="MyProfile">
                                    <i class="bi bi-person-badge me-2"></i>View Profile
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Leave" ? "active" : "")" asp-controller="Leave" asp-action="Index">
                                <i class="bi bi-calendar2-check me-2"></i>Leave Portal
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Attendance" ? "active" : "")" asp-controller="Attendance" asp-action="Index">
                                <i class="bi bi-clock-history me-2"></i>Attendance
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Announcement" ? "active" : "")" asp-controller="Announcement" asp-action="Index">
                                <i class="bi bi-megaphone me-2"></i>Announcements
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <div class="sidebar-footer">
                @if (User.Identity!.IsAuthenticated)
                {
                    <a class="nav-link footer-link" asp-controller="Account" asp-action="EditProfile">
                        <i class="bi bi-pencil-square me-2"></i>Edit Profile
                    </a>
                    <a class="nav-link footer-link" asp-controller="Account" asp-action="ForgotPassword">
                        <i class="bi bi-shield-lock me-2"></i>Reset Password
                    </a>
                    <a class="nav-link text-danger logout-link" asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a>
                }
                else
                {
                    <a class="nav-link logout-link" style="color: #cfd8e3 !important;" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Login
                    </a>
                }
            </div>
        </aside>

        <div class="app-content">
            <header class="top-header">
                <div class="container-fluid d-flex align-items-center justify-content-between px-4 h-100">
                    <button class="btn btn-toggle-sidebar d-lg-none" type="button" id="toggleSidebar">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="flex-grow-1 text-center">
                        <h5 class="m-0 welcome-text">Welcome back</h5>
                    </div>
                    <div class="top-header-right">
                        <span class="badge badge-date">@DateTime.Now.ToString("MMM dd, yyyy")</span>
                    </div>
                </div>
            </header>
            <main role="main" class="content-main">
                <div class="container">
                    @await Html.PartialAsync("_FlashMessage")
                    @RenderBody()
                </div>
            </main>

            <footer class="footer text-muted border-top py-4 mt-auto">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-6 text-center text-md-start">
                            &copy; 2026 - StaffHubSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted">Privacy Policy</a>
                        </div>
                        <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                            <div class="social-links">
                                <a href="#" class="text-muted me-3 fs-5"><i class="bi bi-twitter"></i></a>
                                <a href="#" class="text-muted me-3 fs-5"><i class="bi bi-facebook"></i></a>
                                <a href="#" class="text-muted fs-5"><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            const sidebar = $('#mainSidebar');
            const overlay = $('#sidebarOverlay');
            const toggle = $('#toggleSidebar');
            const close = $('#closeSidebar');

            function toggleSidebar() {
                sidebar.toggleClass('show');
                overlay.toggleClass('show');
                $('body').toggleClass('overflow-hidden');
            }

            toggle.on('click', toggleSidebar);
            close.on('click', toggleSidebar);
            overlay.on('click', toggleSidebar);

            // Close on nav link click (for SPA-like feel if needed)
            $('.sidebar .nav-link').on('click', function() {
                if ($(window).width() < 992) {
                    toggleSidebar();
                }
            });
        });
    </script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
