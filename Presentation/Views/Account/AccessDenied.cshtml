@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm mt-5 text-center p-5">
            <div class="mb-4">
                <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                    <i class="bi bi-shield-slash-fill display-3"></i>
                </div>
            </div>
            <h2 class="fw-bold text-dark mb-3">Access Denied!</h2>
            <p class="text-muted mb-4 fs-5">You do not have the necessary permissions to access this resource. If you believe this is an error, please contact your system administrator.</p>
            
            <div class="d-grid gap-2 col-md-8 mx-auto">
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary py-2 rounded-pill shadow-sm">
                    Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
