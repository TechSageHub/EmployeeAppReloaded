@model RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout";
}

<div class="auth-wrapper border-0">
    <div class="auth-left">
        <h1 class="fw-bold display-5 mb-4">Join StaffHub</h1>
        <p class="lead mb-4">Start managing your organization more effectively. Create your account in seconds.</p>
        <p class="small opacity-75">
            Your all-in-one platform for managing staff effectively and efficiently.
        </p>
        <div class="circle one"></div>
        <div class="circle two"></div>
    </div>

    <div class="auth-right">
        <h2 class="mb-2 fw-bold text-dark">Sign Up</h2>
        <p class="text-muted mb-4">Create your administrator account</p>

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-medium"></label>
                <input asp-for="Email" class="form-control bg-light border-0" placeholder="name@company.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3 position-relative">
                <label asp-for="Password" class="form-label fw-medium"></label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control bg-light border-0 pe-5" type="password" id="registerPassword" placeholder="Create password" />
                    <button type="button" class="btn position-absolute end-0 top-0 h-100 border-0 bg-transparent text-muted px-3" onclick="togglePassword('registerPassword', 'registerPasswordIcon')" tabindex="-1" style="z-index: 10;">
                        <i class="bi bi-eye" id="registerPasswordIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-4 position-relative">
                <label asp-for="ConfirmPassword" class="form-label fw-medium"></label>
                <div class="input-group">
                    <input asp-for="ConfirmPassword" class="form-control bg-light border-0 pe-5" type="password" id="confirmPassword" placeholder="Confirm password" />
                    <button type="button" class="btn position-absolute end-0 top-0 h-100 border-0 bg-transparent text-muted px-3" onclick="togglePassword('confirmPassword', 'confirmPasswordIcon')" tabindex="-1" style="z-index: 10;">
                        <i class="bi bi-eye" id="confirmPasswordIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3 py-3 shadow-sm rounded-pill">
                Create Account <i class="bi bi-person-plus ms-2"></i>
            </button>

            <p class="text-center text-muted mb-0 small">
                Already have an account? <a asp-action="Login" class="text-primary fw-bold text-decoration-none">Sign In</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            const type = passwordInput.getAttribute('type');

            if (type === 'password') {
                passwordInput.setAttribute('type', 'text');
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordInput.setAttribute('type', 'password');
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>
}
