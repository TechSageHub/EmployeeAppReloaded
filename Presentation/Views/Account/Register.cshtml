@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<div class="container">
    <div class="row g-0 align-items-center justify-content-center min-vh-75">
        <div class="col-lg-10 overflow-hidden rounded-4 shadow-premium bg-white">
            <div class="row g-0">
                <div class="col-lg-5 p-5 p-md-5 d-flex flex-column justify-content-center border-end">
                    <div class="auth-header mb-5">
                        <h2 class="fw-800 mb-2">Create Account</h2>
                        <p class="text-muted opacity-75">Create an account to get started.</p>
                    </div>

                    <form asp-action="Register" method="post">
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold small text-muted text-uppercase ls-wide mb-2">Email</label>
                            <div class="position-relative">
                                <input asp-for="Email" class="form-input-premium w-100 ps-5" placeholder="email@example.com" />
                                <i class="bi bi-envelope-at position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                            </div>
                            <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-bold small text-muted text-uppercase ls-wide mb-2">Password</label>
                            <div class="position-relative">
                                <input asp-for="Password" type="password" class="form-input-premium w-100 ps-5 pe-5" id="registerPassword" placeholder="••••••••" />
                                <i class="bi bi-key position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                                <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y me-2 text-muted border-0 bg-transparent" onclick="togglePassword('registerPassword', 'registerPasswordIcon')" tabindex="-1">
                                    <i class="bi bi-eye" id="registerPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-5">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold small text-muted text-uppercase ls-wide mb-2">Confirm Password</label>
                            <div class="position-relative">
                                <input asp-for="ConfirmPassword" type="password" class="form-input-premium w-100 ps-5 pe-5" id="confirmPassword" placeholder="••••••••" />
                                <i class="bi bi-shield-check position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                                <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y me-2 text-muted border-0 bg-transparent" onclick="togglePassword('confirmPassword', 'confirmPasswordIcon')" tabindex="-1">
                                    <i class="bi bi-eye" id="confirmPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <button type="submit" class="btn btn-premium btn-premium-primary w-100 py-3 mb-4">
                            Register <i class="bi bi-person-plus ms-2"></i>
                        </button>

                        <div class="text-center pt-2">
                            <p class="text-muted small mb-0">
                                Already have an account? <a asp-action="Login" class="text-primary-light fw-bold text-decoration-none">Login</a>
                            </p>
                        </div>
                    </form>
                </div>

                <div class="col-lg-7 d-none d-lg-block position-relative bg-light overflow-hidden">
                    <div class="auth-visual-content p-5 h-100 d-flex flex-column justify-content-between position-relative z-1">
                        <div>
                            <div class="badge bg-primary bg-opacity-25 text-primary px-3 py-2 rounded-pill fw-bold ls-wide mb-4">GET STARTED</div>
                            <h1 class="display-4 fw-800 mt-2 mb-3">Manage your <br><span class="text-primary-light">Team effectively.</span></h1>
                            <p class="fs-5 text-dark opacity-75 max-w-400">Use powerful tools to manage your staff and organization. Everything you need in one place.</p>
                        </div>

                        <div class="mt-auto">
                            <div class="row g-4">
                                <div class="col-6">
                                    <div class="bg-white p-4 rounded-4 shadow-sm border h-100">
                                        <div class="bg-warning bg-opacity-10 p-2 rounded-3 text-warning d-inline-block mb-3">
                                            <i class="bi bi-lightning-charge fs-4"></i>
                                        </div>
                                        <h6 class="fw-bold mb-1 text-dark">Fast & Secure</h6>
                                        <p class="small text-muted mb-0 lh-sm">Manage everything in real-time.</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-white p-4 rounded-4 shadow-sm border h-100">
                                        <div class="bg-primary bg-opacity-10 p-2 rounded-3 text-primary d-inline-block mb-3">
                                            <i class="bi bi-cloud-check fs-4"></i>
                                        </div>
                                        <h6 class="fw-bold mb-1 text-dark">Simple Setup</h6>
                                        <p class="small text-muted mb-0 lh-sm">Everything you need in one place.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            const type = passwordInput.getAttribute('type');

            if (type === 'password') {
                passwordInput.setAttribute('type', 'text');
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordInput.setAttribute('type', 'password');
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>
}
