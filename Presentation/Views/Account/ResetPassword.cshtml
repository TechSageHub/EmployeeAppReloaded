@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Set New Password";
    Layout = "_AuthLayout";
}

<div class="container">
    <div class="row min-vh-75 align-items-center justify-content-center">
        <div class="col-lg-5 fade-in-up">
            <div class="glass-card">
                <div class="text-center mb-5">
                    <div class="benefit-icon mx-auto mb-4" style="background: #eff6ff; color: #2563eb; width: 64px; height: 64px; border-radius: 16px; display: flex; align-items: center; justify-content: center; font-size: 1.75rem;">
                        <i class="bi bi-key"></i>
                    </div>
                    <h2 class="fw-bold mb-2">Create New Password</h2>
                    <p class="text-muted">Ensure your account stays secure with a strong password.</p>
                </div>

                <form asp-action="ResetPassword" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="Token" />

                    <div class="mb-4">
                        <label asp-for="NewPassword" class="form-label small fw-bold text-uppercase opacity-75">New Password</label>
                        <div class="input-group">
                            <span class="input-group-text auth-input border-end-0 pe-0">
                                <i class="bi bi-lock text-muted"></i>
                            </span>
                            <input asp-for="NewPassword" type="password" class="form-control auth-input border-start-0 border-end-0" id="resetNewPassword" placeholder="Minimum 6 characters" />
                            <button type="button" class="btn auth-input border-start-0 text-muted" onclick="togglePassword('resetNewPassword', 'newPasswordIcon')" tabindex="-1">
                                <i class="bi bi-eye" id="newPasswordIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label small fw-bold text-uppercase opacity-75">Confirm New Password</label>
                        <div class="input-group">
                            <span class="input-group-text auth-input border-end-0 pe-0">
                                <i class="bi bi-lock-check text-muted"></i>
                            </span>
                            <input asp-for="ConfirmPassword" type="password" class="form-control auth-input border-start-0 border-end-0" id="resetConfirmPassword" placeholder="Repeat new password" />
                            <button type="button" class="btn auth-input border-start-0 text-muted" onclick="togglePassword('resetConfirmPassword', 'confirmPasswordIcon')" tabindex="-1">
                                <i class="bi bi-eye" id="confirmPasswordIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow-sm mb-4" style="background: #2563eb; border: none;">
                        Reset Password <i class="bi bi-check-circle ms-2"></i>
                    </button>

                    <div class="text-center">
                        <a asp-action="Login" class="text-primary small text-decoration-none fw-bold">
                            <i class="bi bi-arrow-left me-2"></i>Back to Sign In
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            const type = input.getAttribute('type');

            if (type === 'password') {
                input.setAttribute('type', 'text');
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.setAttribute('type', 'password');
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>
}
