@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Reset Your Password";
    Layout = "_AuthLayout";
}

<div class="container">
    <div class="row min-vh-75 align-items-center justify-content-center">
        <div class="col-lg-5 fade-in-up">
            <div class="glass-card">
                    <div class="text-center mb-5">
                        <div class="benefit-icon mx-auto mb-4" style="background: #fef2f2; color: #ef4444; width: 64px; height: 64px; border-radius: 16px; display: flex; align-items: center; justify-content: center; font-size: 1.75rem;">
                            <i class="bi bi-shield-lock"></i>
                        </div>
                        <h2 class="fw-bold mb-2">Forgot Password?</h2>
                        <p class="text-muted">No worries, we'll send you reset instructions.</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label small fw-bold text-uppercase opacity-75">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text auth-input border-end-0 pe-0">
                                    <i class="bi bi-envelope text-muted"></i>
                                </span>
                                <input asp-for="Email" class="form-control auth-input border-start-0" placeholder="name@company.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow-sm mb-4" style="background: #2563eb; border: none;">
                            Send Reset Link <i class="bi bi-send ms-2"></i>
                        </button>

                        <div class="text-center">
                            <a asp-action="Login" class="text-primary small text-decoration-none fw-bold">
                                <i class="bi bi-arrow-left me-2"></i>Back to Sign In
                            </a>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
