@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AuthLayout";
}

<div class="container">
    <div class="row min-vh-75 align-items-center justify-content-center">
        <div class="col-lg-5">
            <div class="card-premium p-5 border-top border-4 border-danger">
                <div class="text-center mb-5">
                    <div class="bg-danger bg-opacity-10 p-4 rounded-circle text-danger d-inline-block mb-4">
                        <i class="bi bi-shield-lock-fill fs-1"></i>
                    </div>
                    <h2 class="fw-800 mb-2">Forgot Password</h2>
                    <p class="text-muted opacity-75">Forgot your password? Enter your email address below to reset it.</p>
                </div>

                <form asp-action="ForgotPassword" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-5">
                        <label asp-for="Email" class="form-label fw-bold small text-muted text-uppercase ls-wide mb-2">Email</label>
                        <div class="position-relative">
                            <input asp-for="Email" class="form-input-premium w-100 ps-5" placeholder="email@example.com" />
                            <i class="bi bi-envelope-at position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        </div>
                        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <button type="submit" class="btn btn-premium btn-premium-primary w-100 py-3 mb-4">
                        Send Reset Link <i class="bi bi-send-check ms-2"></i>
                    </button>

                    <div class="text-center pt-2">
                        <a asp-action="Login" class="text-muted small text-decoration-none fw-bold hover-text-primary">
                            <i class="bi bi-arrow-left me-2"></i> BACK TO LOGIN
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
