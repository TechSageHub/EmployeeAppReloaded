@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Reset Your Password";
}

<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card border-0 shadow-sm mt-5">
            <div class="card-header bg-white p-4 border-0 text-center">
                <div class="mb-3">
                    <i class="bi bi-shield-lock text-primary display-4"></i>
                </div>
                <h4 class="fw-bold mb-1">@ViewData["Title"]</h4>
                <p class="text-muted small">Enter your email and we'll send you a link to reset your password</p>
            </div>
            <div class="card-body p-4">
                <form asp-action="ForgotPassword" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label fw-medium"></label>
                        <input asp-for="Email" class="form-control bg-light border-0 py-2" placeholder="name@company.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary py-2 rounded-pill shadow-sm">
                            Send Reset Link <i class="bi bi-send ms-2"></i>
                        </button>
                        <a asp-action="Login" class="btn btn-link text-decoration-none text-muted small mt-2">
                            <i class="bi bi-arrow-left me-1"></i> Return to Login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
